<%= render partial: "shared/header", locals: {user: @user} %>

<div class="your-type">
  <%= image_tag @user.chrono.image, size: '360x360', class: 'type-image', alt: "#{@user.chrono.name}の画像" %>
  <p class="animal-name">
    <span><%= @user.chrono.name %></span>タイプの特徴
  </p>
</div>

<div class="chrono-details">
  <table>
    <tr>
      <th>必要な睡眠時間</th>
      <td><%= @user.chrono.sleep_hours %>時間</td>
    </tr>

    <tr>
      <th>最適な就寝時間</th>
      <td><%= @user.chrono.bed_time %></td>
    </tr>

    <tr>
      <th>起床時間</th>
      <td><%= @user.chrono.wake_up %></td>
    </tr>

    <tr>
      <th>最も集中できる時間帯</th>
      <td><%= @user.chrono.peak_time %></td>
    </tr>

    <tr>
      <th>運動に最適な時間帯</th>
      <td><%= @user.chrono.exercise %></td>
    </tr>
  </table>
  <h1><%= @user.chrono.name %>タイプの特徴</h1>
  <p><%= @user.chrono.content%></p>

  <%= link_to "トップページへ戻る", root_path, class: "top-page-btn" %>
  <%= link_to "マイページへ", user_path(@user), class: "my-page-btn" %>
</div>